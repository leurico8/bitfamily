# Database Configuration (Required)
DATABASE_URL=postgresql://user:password@host:5432/bitfamily

# Session Configuration (Required)
SESSION_SECRET=your-64-character-secret-key-here-please-change-this-value
REPLIT_DOMAINS=your-domain.com,additional-domain.com
REPL_ID=your-repl-identifier
ISSUER_URL=https://replit.com/oidc

# Application Configuration
NODE_ENV=production
PORT=5000

# Bitcoin Configuration (Optional)
BITCOIN_NETWORK=testnet
BITCOIN_RPC_URL=http://localhost:8332
BITCOIN_RPC_AUTH=username:password

# Family Wallet Configuration (Optional)
FAMILY_WALLET_ADDRESS=your-bitcoin-address
FAMILY_WALLET_XPUB=your-extended-public-key

# Lightning Network Configuration (Optional)
LIGHTNING_NETWORK_URL=https://your-lnd-node:8080
LIGHTNING_MACAROON=base64-encoded-admin-macaroon
LIGHTNING_TLS_CERT=base64-encoded-tls-cert

# External API Keys (Optional)
ALBY_ACCESS_TOKEN=your-alby-access-token
PHOENIX_API_KEY=your-phoenix-api-key
BREEZ_API_KEY=your-breez-api-key
BLOCKCYPHER_API_KEY=your-blockcypher-api-key
